{
  "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:@next/next/recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2021,
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "rules": {
    "react/display-name": "off",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "func-names": "warn",
    "no-await-in-loop": "warn",
    "no-lonely-if": "warn",
    "no-var": "warn",
    "object-shorthand": "warn"
  }
}
